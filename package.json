{
  "version": "1.2.1",
  "description": "Action for zipping files and folders in ocmod archive",
  "author": "Ivan Stasiuk <brokeyourbike@gmail.com>",
  "license": "MIT",
  "keywords": [
    "action",
    "github",
    "opencart",
    "zip",
    "ocmod"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brokeyourbike/prepare-opencart-module-action.git"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc && ncc build --minify",
    "format": "ts-standard --fix src/*.ts",
    "format-check": "ts-standard src/*.ts",
    "test": "jest --coverage",
    "pre-checkin": "np, run format && npm run build && npm test"
  },
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^5.0.0",
    "adm-zip": "^0.5.5"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.34",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@zeit/ncc": "^0.22.3",
    "jest": "^27.4.4",
    "jest-circus": "^27.4.4",
    "nock": "^13.2.1",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "ts-standard": "*",
    "typescript": "^3.8.3"
  },
  "standard": {
    "ignore": "dist/"
  }
}
